<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/backtoschool" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="14dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UTEHY"
                    android:textSize="42dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App"
                    android:layout_marginLeft="8dp"
                    android:textSize="42dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:id="@+id/textId"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:ems="10"
                android:background="@drawable/edittext_backgroud"
                android:inputType="text"
                android:hint="Id student"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColorHint="#838080"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:id="@+id/textPass"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:ems="10"
                android:textColor="@color/black"
                android:background="@drawable/edittext_backgroud"
                android:inputType="textPassword"
                android:hint="Password"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColorHint="#838080"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/signupBtn"
                android:text="Sign Up"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="32dp"
                android:layout_marginStart="-16dp"
                android:background="@drawable/blue_button_backgroud"
                style="@android:style/Widget.Button"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you a member? Login"
                android:textSize="18sp"
                android:layout_marginTop="18sp"
                android:textColor="@color/black"
                android:id="@+id/login"
                android:textAlignment="center"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>